{
  "version": "0.0.1",
  "name": "surveyjs.io.tests",
  "scripts": {
    "warmup": "testcafe warmup  --native-automation --selector-timeout 1000000 --reporter spec,xunit:report.xml --browser-init-timeout 1000000 --page-request-timeout 1000000 --config-file .testcaferc.js",
    "test_ci": "testcafe ./site/payment ./site/surveyjstest  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000 --config-file .testcaferc.js",
    "test:examples": "testcafe ./examples/examples-func --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000",
    
    "pw:ci": "npx playwright test --reporter=dot --project=site",
    "pw:ui": "npx playwright test --project=site --ui",
    "pw:examples:ci": "npx playwright test --reporter=dot --project=examples",
    "pw:examples:ui": "npx playwright test --ui --project=examples",
    "pw:examples:vrt:ci": "npx playwright test --reporter=dot --project=examples-vrt",
    "pw:examples:vrt:ui": "npx playwright test --ui --project=examples-vrt",
    
    "pre-push-check": "npm run lint",
    "lint": "eslint ./**/*.spec.ts --quiet",
    "prepare": "husky install",
    "postinstall": "playwright install chromium",  
    
    "v2": "testcafe chrome ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000",
    "v2:ci": "testcafe chrome:headless ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000",
    "v2:ci:new": "testcafe chrome:headless ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000 --env-new=true",
    "v2:dev": "testcafe chrome ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000 --env-dev=true",
    "v2:dev:ci": "testcafe chrome:headless ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000 --env-dev=true",
    "v2:dev:new": "testcafe chrome:headless ./site/V2-VRT/ --screenshots ./  --native-automation --selector-timeout 1500 --reporter spec,xunit:report.xml --browser-init-timeout 420000 --page-request-timeout 168000 --env-dev=true --env-new=true"
  },
  "dependencies": {
    "@playwright/test":  "1.52.0",
    "playwright": "1.52.0",
    "devextreme-screenshot-comparer": "^2.0.16",
    "minimist": "^1.2.6",
    "puppeteer": "22.13.1",
    "testcafe": "3.3.0",
    "testcafe-reporter-xunit": "^2.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-cli": "^1.1.1",
    "eslint-plugin-surveyjs": "file:eslint-surveyjs",
    "husky": "^8"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push-check"
    }
  }
}
